{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/types": ["./src/types"],
      "@components/shadcn": ["./src/components/shadcn"],
      "@components/feature": ["./src/components/feature"],
      "@components/ui": ["./src/components/ui"],
      "@components/theme": ["./src/components/theme"],
      "@pages/feature": ["./src/pages/feature"],
      "@pages/ui": ["./src/pages/ui"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
